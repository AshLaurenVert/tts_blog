<p id="notice"><%= notice %></p>

<div class= "panel panel-default">
	<div class= "panel-heading">
	<strong><%= @post.title %></strong> by <%= @post.user.username %>
	</div>
	<div class= "panel-body">
	<%= @post.blog_entry %>
	</div>
	<div class= "panel-footer">
	<p><%= link_to 'Edit', edit_post_path(@post), {class: 'btn btn-warning'} %> </p>
	
	<div id="comments">
		<%= render 'comments/form', comment: @comment %>
		<% @post.comments.each do |comment| %>
		<p><strong><%= link_to comment.user.username, user_posts_path(name: comment.user.username) %> said...</strong></p>
			<p><%= comment.comment_entry %></p>
		<% end %>
	</div>
	<p><%= link_to 'Back', posts_path, class: 'btn btn-default' %></p>
	</div>
</div>

